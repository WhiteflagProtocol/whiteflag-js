{
    "compilerOptions": {
        "target": "es2022",
        "module": "preserve",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "rewriteRelativeImportExtensions": true,
        "strict": true,
        "declaration": false,
        "removeComments": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "paths": {
            "@whiteflag/protocol": ["./src/protocol"],
            "@whiteflag/core": ["./src/core"],
            "@whiteflag/crypto": ["./src/crypto"],
            "@whiteflag/util": ["./src/util"]
        },
        "noImplicitThis": true,
    },
    "include": ["./src/**/*"],
    "typedocOptions": {
        "entryPoints": [
            "src/**/*.ts"
        ],
        "out": "docs/typedoc",
            "tagDefinitions": [
                { "tagName": "@wfref", "syntaxKind": "block" },
                { "tagName": "@wfver", "syntaxKind": "block" }
            ]
    }
}