{
    "compilerOptions": {
        "target": "es2022",
        "module": "preserve",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowImportingTsExtensions": true,
        "rewriteRelativeImportExtensions": true,
        "strict": true,
        "noImplicitUseStrict": false,
        "declaration": false,
        "removeComments": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "paths": {
            "@whiteflagprotocol/common": ["./src/common"],
            "@whiteflagprotocol/core": ["./src/core"],
            "@whiteflagprotocol/crypto": ["./src/crypto"],
            "@whiteflagprotocol/main": ["./src/main"],
            "@whiteflagprotocol/util": ["./src/util"],
        },
        "noImplicitThis": true,
    },
    "include": ["./src/**/*"]
}